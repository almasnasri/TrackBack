<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.trackback.RegisterController">
    <Label text="Register New User" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TextField fx:id="usernameField" promptText="Enter Username"/>
    <PasswordField fx:id="passwordField" promptText="Enter Password"/>
    <Button text="Register" onAction="#registerUser"/>
    <Label fx:id="messageLabel" text=""/>
</VBox>
